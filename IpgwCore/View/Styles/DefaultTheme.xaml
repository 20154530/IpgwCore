<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:settings="clr-namespace:IpgwCore.Properties"
                    xmlns:view="clr-namespace:IpgwCore.View">
    <!--#region                                                -->
    <!--#endregion-->


    <!--#region                                                Basic  -->

    <SolidColorBrush x:Key="MainWindow_Bg"
                     Color="#080808" />
    <SolidColorBrush x:Key="MainWindow_Bc"
                     Color="#000000" />
    <SolidColorBrush x:Key="MainWindow_Fg"
                     Color="#E0E0E0" />
    <!--#endregion-->

    <!--#region                                                MainPage-->

    <SolidColorBrush x:Key="MainPage_Bg"
                     Color="#080808" />
    <SolidColorBrush x:Key="MainPage_Bg_L"
                     Color="#080808" />
    <SolidColorBrush x:Key="MainPage_Fg"
                     Color="#808080" />
    <SolidColorBrush x:Key="MainPage_Fg_L"
                     Color="#808080" />

    <SolidColorBrush x:Key="YT_Hitholder_Bg"
                     Color="Transparent" />
    <SolidColorBrush x:Key="YT_Hitholder_Bg_R"
                     Color="#20ffffff" />
    <SolidColorBrush x:Key="YT_Hitholder_Bg_P"
                     Color="#40ffffff" />

    <DrawingBrush x:Key="DashLineBrush"
                  Viewport="0,0,0.035,0.035"
                  Stretch="Uniform"
                  TileMode="Tile">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <GeometryGroup>
                        <LineGeometry StartPoint="0,0"
                                      EndPoint="20,20" />
                    </GeometryGroup>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Pen>
                    <Pen Thickness="1"
                         Brush="#E0E0E0" />
                </GeometryDrawing.Pen>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <DrawingBrush x:Key="DashLineBrushR"
                  Viewport="0,0,0.40,0.40"
                  Stretch="Uniform"
                  TileMode="Tile">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <GeometryGroup>
                        <LineGeometry StartPoint="0,0"
                                      EndPoint="10,10" />
                    </GeometryGroup>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Pen>
                    <Pen Thickness="1"
                         Brush="#E0E0E0" />
                </GeometryDrawing.Pen>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>


    <!--#endregion-->

    <!--#region                                                InfoPage-->
