<Application x:Class="IpgwCore.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:IpgwCore.View"
             xmlns:viewmodel="clr-namespace:IpgwCore.ViewModel"
             xmlns:local="clr-namespace:IpgwCore">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Res.xaml" />
                <ResourceDictionary Source="/View/Styles/DefaultTheme.xaml" />
                <ResourceDictionary Source="/View/Styles/BasicStyles.xaml" />
                <ResourceDictionary Source="/View/Styles/ControlStyles.xaml" />
                <ResourceDictionary Source="/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <viewmodel:MainPageViewModel x:Key="MainPageVM" />
            <viewmodel:SettingPageViewModel x:Key="SettingPageVM" />
            <viewmodel:FluxInfoViewModel x:Key="FluxInfoVM" />
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
